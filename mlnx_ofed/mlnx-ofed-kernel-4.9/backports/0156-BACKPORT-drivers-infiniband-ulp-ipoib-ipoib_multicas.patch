+			continue;
 
+		memcpy(mgid.raw, mclist->dmi_addr + 4, sizeof mgid);
+#endif
 		mcast = __ipoib_mcast_find(dev, &mgid);
 		if (!mcast || test_bit(IPOIB_MCAST_FLAG_SENDONLY, &mcast->flags)) {
